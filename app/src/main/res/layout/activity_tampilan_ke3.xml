<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TampilanKe3">


    <ImageView
        android:id="@+id/people"
        android:layout_width="48dp"
        android:layout_height="43dp"
        android:src="@drawable/people"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="Hello, Asep"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/people"
        app:layout_constraintTop_toTopOf="@+id/people" />

    <ImageView
        android:id="@+id/pepperonipizza"
        android:layout_width="121dp"
        android:layout_height="121dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/people"
        app:srcCompat ="@drawable/pepperonipizza"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:foreground="?actionBarItemBackground" />

    <TextView
        android:id="@+id/text_pepperonipizza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/pepperonipizza"
        app:layout_constraintTop_toTopOf="@+id/pepperonipizza"
        android:text="Pepperoni Pizza"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#733F03"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/penjelasan_1"
        android:layout_width="213dp"
        android:layout_height="98dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:text="Cocok bagi anda yang ingin merasakan pizza original dengan taburan keju dan daging asap yang lezat"
        android:textColor="#733F0E"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/pepperonipizza"
        app:layout_constraintTop_toTopOf="@+id/text_pepperonipizza" />

    <ImageView
        android:id="@+id/spaghetti"
        android:layout_width="121dp"
        android:layout_height="121dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pepperonipizza"
        app:srcCompat ="@drawable/spaghetti"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:foreground="?actionBarItemBackground" />

    <TextView
        android:id="@+id/text_spaghetti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/spaghetti"
        app:layout_constraintTop_toTopOf="@+id/spaghetti"
        android:text="Spaghetti"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#733F03"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground" />


    <TextView
        android:id="@+id/penjelasan_2"
        android:layout_width="213dp"
        android:layout_height="98dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:text="Cocok bagi anda yang ingin merasakan spaghetti original dengan bumbu yang oriental"
        android:textColor="#733F0E"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/spaghetti"
        app:layout_constraintTop_toTopOf="@+id/text_spaghetti" />

    <ImageView
        android:id="@+id/burger"
        android:layout_width="121dp"
        android:layout_height="121dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spaghetti"
        app:srcCompat ="@drawable/burger"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:foreground="?actionBarItemBackground" />

    <TextView
        android:id="@+id/text_burger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/burger"
        app:layout_constraintTop_toTopOf="@+id/burger"
        android:text="Burger"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#733F03"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/penjelasan_3"
        android:layout_width="213dp"
        android:layout_height="98dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:text="Cocok bagi anda yang ingin merasakan kelembutan burger berlapiskan keju, sayuran dan daging yang tebal"
        android:textColor="#733F0E"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/burger"
        app:layout_constraintTop_toTopOf="@+id/text_burger" />

    <ImageView
        android:id="@+id/steak"
        android:layout_width="121dp"
        android:layout_height="121dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/burger"
        app:srcCompat ="@drawable/steak"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:foreground="?actionBarItemBackground" />

    <TextView
        android:id="@+id/text_steak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/steak"
        app:layout_constraintTop_toTopOf="@+id/steak"
        android:text="Steak"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#733F03"
        android:layout_marginStart="16dp"
        android:layout_marginTop="1dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/penjelasan_4"
        android:layout_width="213dp"
        android:layout_height="98dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:text="Cocok bagi anda yang ingin merasakan lezatnya daging steak dipadukan dengan kentang yang lezat"
        android:textColor="#733F0E"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/steak"
        app:layout_constraintTop_toTopOf="@+id/text_steak" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="59dp"
        android:layout_height="73dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="-10dp"
        app:layout_constraintStart_toEndOf="@+id/steak"
        app:layout_constraintTop_toBottomOf="@+id/steak"
        app:srcCompat="@drawable/addbutton" />



</androidx.constraintlayout.widget.ConstraintLayout>